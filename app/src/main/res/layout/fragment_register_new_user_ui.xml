<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RegisterNewUserUI"
    tools:showIn="@layout/activity_register_user"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/unknownperson"
        android:id="@+id/imageView5"
        android:scaleType="fitCenter">

    </ImageView>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/camerita"
        android:scaleType="fitCenter"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="Nombre"
        android:id="@+id/NameNewReg"
        android:layout_below="@+id/UserNameNewReg"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:id="@+id/UserNameNewReg"
        android:text="Nombre de usuario"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="Apellido paterno"
        android:id="@+id/UserLastNameNewReg"
        android:layout_below="@+id/NameNewReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="Apellido materno"
        android:id="@+id/UserLastName2NewReg"
        android:layout_below="@+id/UserLastNameNewReg"
        android:layout_alignParentLeft="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="Correo electronico"
        android:id="@+id/UserEmailNewReg"
        android:layout_below="@+id/UserLastName2NewReg"
        android:layout_alignParentLeft="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ContraseÃ±a"
        android:id="@+id/PassWordNewReg"
        android:inputType="textPassword"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserEmailNewReg"
        android:layout_alignParentLeft="true" />

</android.support.v4.widget.NestedScrollView>
