<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/aboutFondo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.iteso.sergio.emt_ad1.AboutActivity"
    tools:showIn="@layout/activity_about">
<!--
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/about"
        android:layout_height="match_parent"
        android:id="@+id/imageView3" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:text="Aplicación desarrollada por"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Laboratorio de aplicaciones móviles ITESO"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/iteso"
        android:id="@+id/imageView"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/cetsj"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/coecytjal"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/siyt"
        android:id="@+id/imageView7"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/jaliscogobierno"
        android:padding="15dp"
        android:id="@+id/imageView8"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/coprisjal"
        android:id="@+id/imageView9"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="Contacto:\nmobilelab@iteso.mx"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true" />

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingRight="15dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:onClick="hiperlink_click"
        android:text="@string/privacy_link"
        android:textColor="@color/azullink"
        android:padding="15dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
